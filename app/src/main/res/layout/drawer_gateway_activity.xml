<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/prof_holder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_pic" />

        <com.sp.benjago.customview.RobotoMediam
            android:id="@+id/prof_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prof_holder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Saikat Pakira"
            android:textColor="@color/colorWhite" />

        <com.sp.benjago.customview.RobotoMediam
            android:id="@+id/prof_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prof_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="saikatpakira@abc.com"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>


</LinearLayout>
