<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <com.sp.benjago.customview.RobotoLight
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="12"
        android:gravity="center"
        android:text="@string/signin_text"
        android:textColor="@color/splashTextColor"
        android:textSize="18sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/password"
        android:layout_alignLeft="@+id/lets_go"
        android:layout_alignRight="@+id/lets_go"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_field"
        android:gravity="center"
        android:hint="User Email"
        android:inputType="textPersonName"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:textColor="@color/splashTextColor"
        android:textColorHint="@color/splashTextColor"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/lets_go"
        android:layout_alignLeft="@+id/lets_go"
        android:layout_alignRight="@+id/lets_go"
        android:layout_marginBottom="18dp"
        android:background="@drawable/input_field"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:textColor="@color/splashTextColor"
        android:textColorHint="@color/splashTextColor"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/lets_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_panel_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:src="@drawable/signin"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/bottom_panel_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical">


        <View
            android:id="@+id/line"
            android:layout_width="256dp"
            android:layout_height="2dp"
            android:layout_marginBottom="6dp"
            android:background="#60FFFFFF"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/bottom_panel"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook" />

                <com.sp.benjago.customview.RobotoLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Facebook"
                    android:textColor="@color/off_white"
                    android:textSize="18sp" />
            </LinearLayout>


            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#60FFFFFF" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/googleplus" />

                <com.sp.benjago.customview.RobotoLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Google Plus"
                    android:textColor="@color/off_white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:visibility="gone" />


</RelativeLayout>
